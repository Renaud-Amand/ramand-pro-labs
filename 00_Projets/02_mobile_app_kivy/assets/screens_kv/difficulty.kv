#:import utils kivy.utils

<DifficultyScreen>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#FDFBEE')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: dp(24)
        spacing: dp(24)

        Button:
            text: "Tortue\n(Facile / Lent)"
            font_name: "OpenDyslexic"
            font_size: sp(24)
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            size_hint_y: 1
            background_normal: ""
            background_color: utils.get_color_from_hex('#C8E6C9')
            color: 0, 0, 0, 1
            on_release: root.select_level(1)

        Button:
            text: "Lapin\n(Moyen)"
            font_name: "OpenDyslexic"
            font_size: sp(24)
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            size_hint_y: 1
            background_normal: ""
            background_color: utils.get_color_from_hex('#FFF9C4')
            color: 0, 0, 0, 1
            on_release: root.select_level(2)

        Button:
            text: "Gu√©pard\n(Difficile / Rapide)"
            font_name: "OpenDyslexic"
            font_size: sp(24)
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            size_hint_y: 1
            background_normal: ""
            background_color: utils.get_color_from_hex('#FFE0B2')
            color: 0, 0, 0, 1
            on_release: root.select_level(3)
